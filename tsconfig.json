{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "skipLibCheck": true,
    "noUncheckedSideEffectImports": true
  }
}
